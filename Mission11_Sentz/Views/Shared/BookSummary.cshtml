@{
}

@model Book

<div class="card n-1 p-1">
    <h4>
        @Model.Title
        <span class="badge rounded-pill bg-primary text-white float-end">Price: $@Model.Price</span>
    </h4>
    <ul>
        <li>Author: @Model.Author</li>
        <li>Publisher: @Model.Publisher</li>
        <li>Classifciation/Category: @Model.Classification/@Model.Category</li>
        <li>Number of Pages: @Model.PageCount</li>
        <li>ISBN: @Model.Isbn</li>

    </ul>
</div>